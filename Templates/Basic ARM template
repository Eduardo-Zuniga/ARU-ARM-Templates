{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "languageVersion": "2.0",
    "apiProfile": "2019-03-01-hybrid",
    "definitions": {
        "creatorType": {
            "type": "string",
            "maxLength": 13,
            "minLength": 4,
            "metadata": {
                "description": "Expects an identifier of the creator (v-) to name resources after."
            }
        }
    },
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the location in which the resources should be deployed."
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name for the storage account to deploy"
            }
        },
        "deployerName": {
            "$ref": "#/definitions/creatorType",
            "metadata": {
                "description": "Name of person who is deploying resources"
            }
        }
    },
    "functions": [
        {
            "namespace": "customNames",
            "members": {
                "uniqueName": {
                    "parameters": [
                        {
                            "name": "specificPrefix",
                            "type": "string"
                        },
                        {
                            "name": "creatorName",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[toLower(concat(parameters('specificPrefix'),parameters('creatorName')))]"
                    }
                }
            }
        }
    ],
    "variables": {
        "templaTetype": [
            "Basic ARM template",
            "Child resources",
            "Nested templates",
            "Multiple instances",
            "Conditional templates",
            "Deployment scripts"
        ]
    },
    "resources": 
        {
            "storageARU": {
                "type": "Microsoft.Storage/storageAccounts",
                "name": "[customNames.uniqueName(parameters('storageAccountName'),parameters('deployerName'))]",
                "location": "[parameters('location')]",
                "sku": {
                    "name": "Standard_LRS"
                },
                "kind": "StorageV2",
                "properties": {
                    "largeFileSharesState": "Enabled"
                }
            }
        },
    "outputs": {
        "shown": {
            "type": "string",
            "value": "[variables('templaTetype')[0]]"
        }
    }
}
