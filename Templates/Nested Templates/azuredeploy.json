{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "languageVersion": "2.0",
    "apiProfile": "2018â€“03-01-hybrid",
    "definitions": {
        "creatorType": {
            "type": "string",
            "maxLength": 13,
            "minLength": 4,
            "metadata": {
                "description": "Expects an identifier of the creator (v-) to name resources after"
            }
        }
    },
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the location in which the Azure resources should be deployed"
            }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "StorageARU",
            "metadata": {
                "description": "Name for the storage account to deploy"
            }
        },
        "deployerName": {
            "$ref": "#/definitions/creatorType",
            "defaultValue": "veduardoz",
            "metadata": {
                "description": "Identifier for person who is deploying resources"
            }
        },
        "vaultName":{
            "type": "string",
            "defaultValue": "vaultARU"
        },
        "location":{
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "tenantId":{
            "type": "string"
        },
        "skuName":{
            "type": "string",
            "defaultValue": "standard",
            "metadata":{
                "description": "Sku to be used by the vault."
            },
            "allowedValues":[
                "standard",
                "premium"
            ]
        },
        "creatorOID": {
            "type": "string",
            "metadata":{
                "description": "Object ID that will have full access to the vault."
            }
        }
    },
    "functions": [
        {
            "namespace": "customNames",
            "members": {
                "storageID": {
                    "parameters": [
                        {
                            "name": "specificPrefix",
                            "type": "string"
                        },
                        {
                            "name": "creatorName",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[toLower(concat(parameters('specificPrefix'),parameters('creatorName')))]"
                    }
                }
            }
        }
    ],
    "variables": {
        "Stepnumber": [
            "Basic ARM template",
            "Child resources",
            "Nested templates",
            "Multiple instances",
            "Conditional templates",
            "Deployment scripts"
        ]
    },
    "resources": 
        {
            "storageARU": {
                "type": "Microsoft.Storage/storageAccounts",
                "apiVersion": "2022-09-01",
                "name": "[customNames.storageID(parameters('storageAccountName'),parameters('deployerName'))]",
                "location": "[parameters('location')]",
                "sku": {
                    "name": "Standard_LRS"
                },
                "kind": "StorageV2",
                "properties": {
                    "largeFileSharesState": "Enabled"
                },
                "tags": {
                    "RampUpStep": "[variables('Stepnumber')[0]]",
                    "test": "1"
                }
            },
            "vaultNested": {
                "type": "Microsoft.Resources/deployments",
                "apiVersion": "2022-09-01",
                "name": "nestedTemplate1",
                "properties": {
                    "mode": "Incremental",
                    "expressionEvaluationOptions": {
                        "scope": "inner"
                    },
                    "template": {
                        "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                        "contentVersion": "1.0.0.0",
                        "parameters":{
                            "vaultName":{
                                "type": "string",
                                "defaultValue": "vaultARU"
                            },
                            "location":{
                                "type": "string",
                                "defaultValue": "[resourceGroup().location]"
                            },
                            "tenantId":{
                                "type": "string"
                            },
                            "skuName":{
                                "type": "string",
                                "defaultValue": "standard",
                                "metadata":{
                                    "description": "Sku to be used by the vault."
                                },
                                "allowedValues":[
                                    "standard",
                                    "premium"
                                ]
                            },
                            "creatorOID": {
                                "type": "string",
                                "metadata":{
                                    "description": "Object ID that will have full access to the vault."
                                }
                            }
                        },
                        "resources": [
                            {
                                "name": "[parameters('vaultName')]",
                                "type": "Microsoft.KeyVault/vaults",
                                "apiVersion": "2019-09-01",
                                "location": "[parameters('location')]",
                                "properties": {
                                    "tenantId": "[parameters('tenantId')]",
                                    "sku": {
                                        "family": "A",
                                        "name": "[parameters('skuName')]"
                                    },
                                    "accessPolicies": [
                                        {
                                            "objectId": "[parameters('creatorOID')]",
                                            "permissions": {
                                                "certificates": [ "all" ],
                                                "keys": [ "all" ],
                                                "secrets": [ "all" ],
                                                "storage": [ "all" ]
                                            },
                                            "tenantId": "[parameters('tenantId')]"
                                        }
                                    ],
                                    "enableSoftDelete": "false"
                                }
                            }
                        ]
                    },
                    "parameters": {
                        "location":{
                            "value": "[parameters('location')]"
                        },
                        "tenantId":{
                            "value": "[parameters('tenantId')]"
                        },
                        "creatorOID": {
                            "value": "[parameters('creatorOID')]"
                        }
                    }
                }
            }
        },
    "outputs": {
        "RampUpStep": {
            "type": "string",
            "value": "[variables('Stepnumber')[2]]"
        }
    }
}
